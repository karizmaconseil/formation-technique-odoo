<odoo>
    <data>

        <record model="ir.ui.view" id="instance_request_search">
            <field name="name">Demande de creation d'instance</field>
            <field name="model">instance.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="limit_date"/>
                    <field name="state"/>
                </search>
            </field>
        </record>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="instance_request_list">
            <field name="name">Demande de creation d'instance</field>
            <field name="model">instance.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="limit_date"/>
                    <field name="state"/>
                    <!--                    <button string="Set to draft" type="object" name="action_draft" class="oe_highlight"/>
                                        <button string="Submit" type="object" name="action_submit" class="oe_highlight"/>-->
                    <button string="Set to progress" type="object" name="action_progress" icon="fa-check"
                            states="submitted,done"/>
                    <button string="Done" type="object" name="action_done" icon="fa-thumbs-up" states="in_progress"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="instance_request_form">
            <field name="name">Demande de creation d'instance</field>
            <field name="model">instance.request</field>
            <field name="arch" type="xml">
                <form string="Demande">
                    <header>
                        <button string="Set to draft" type="object" name="action_draft" class="oe_highlight"

                                states="submitted,done"/>
                        <button string="Submit" type="object" name="action_submit" class="oe_highlight"
                                context="{'get_if_submit': '7'}"
                                states="draft,in_progress"/>
                        <button string="Set to progress" type="object" name="action_progress" class="oe_highlight"

                                states="submitted,done"/>
                        <button string="Done" type="object" groups="instance_request.group_instance_request_resp" name="action_done" class="oe_highlight"
                                states="in_progress"/>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="color" groups="instance_request.group_instance_request" invisible="0"/>
                                <field name="limit_date" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="instance_request_action">
            <field name="name">Demande de creation</field>
            <field name="res_model">instance.request</field>
<!--            <field name="domain">[('create_uid', '=', uid)]</field>-->
            <!--            <field name="context">{'group_by': ['limit_date']}</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
        <!--
            <record model="ir.actions.server" id="instance_request.action_server">
              <field name="name">instance_request server</field>
              <field name="model_id" ref="model_instance_request_instance_request"/>
              <field name="state">code</field>
              <field name="code">
                action = {
                  "type": "ir.actions.act_window",
                  "view_mode": "tree,form",
                  "res_model": model._name,
                }
              </field>
            </record>
        -->

        <!-- Top menu item -->


        <record id="action_server_treated" model="ir.actions.server">
            <field name="name">Set to done</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="instance_request.model_instance_request"/>
            <field name="binding_model_id" ref="instance_request.model_instance_request"/>
            <field name="state">code</field>
            <field name="code">records.action_done()</field>
        </record>

        <record id="ir_cron_instance" model="ir.cron">
            <field name="name">Update Printers Jobs</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="instance_request.model_instance_request"/>
            <field name="state">code</field>
            <field name="code">model.action_done()</field>
        </record>


        <menuitem name="Instance request"
                  id="menu_root"
                  groups="instance_request.group_instance_request_user"
        />
        <menuitem name="Mes demandes"
                  id="menu_my_request"
                  parent="instance_request.menu_root"
                  action="instance_request_action"
                  groups="instance_request.group_instance_request_user"
        />
        <menuitem name="Responsables"
                  id="menu_resp"
                  parent="instance_request.menu_root"
                  action="instance_request_action"
                  groups="instance_request.group_instance_request_resp"
        />
        <menuitem name="Configuration"
                  id="menu_config"
                  parent="instance_request.menu_root"
                  action="instance_request_action"
                  groups="instance_request.group_instance_request"
        />
        <!-- menu categories -->
        <!--
            <menuitem name="Menu 1" id="instance_request.menu_1" parent="instance_request.menu_root"/>
            <menuitem name="Menu 2" id="instance_request.menu_2" parent="instance_request.menu_root"/>
        -->
        <!-- actions -->
        <!--
            <menuitem name="List" id="instance_request.menu_1_list" parent="instance_request.menu_1"
                      action="instance_request.action_window"/>
            <menuitem name="Server to list" id="instance_request" parent="instance_request.menu_2"
                      action="instance_request.action_server"/>
        -->
    </data>
</odoo>