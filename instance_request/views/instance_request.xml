<odoo>
    <data>

        <record model="ir.ui.view" id="instance_request_search">
            <field name="name">Demande de creation d'instance</field>
            <field name="model">instance.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Name and odoo version"
                           filter_domain="['|', ('name', 'ilike', self), ('odoo_version_id', 'ilike', self)]"/>
                    <field name="limit_date"/>
                    <field name="state"/>
                    <field name="color" invisible="1"/>

                    <filter name="instance_done" string="Done"
                            domain="[('state', '=', 'done')]"/>
                    <filter name="instance_draft" string="Draft"
                            domain="[('state', '=', 'draft')]"/>
                    <separator/>
                    <filter name="instance_red" string="Red"
                            domain="[('color', '=', 'red')]"/>

                    <group string="Group By">
                        <filter name="group_by_state" string="State"
                                context="{'group_by': 'state'}"/>
                        <filter name="group_by_odoo_version_id" string="Odoo version"
                                context="{'group_by': 'odoo_version_id'}"/>
                    </group>

                </search>
            </field>
        </record>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="instance_request_list">
            <field name="name">Demande de creation d'instance</field>
            <field name="model">instance.request</field>
            <field name="arch" type="xml">
                <tree decoration-warning="color=='yellow'" decoration-danger="color=='red'"
                      decoration-success="color=='green'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="color" invisible="0"/>
                    <field name="odoo_version_id"/>
                    <field name="odoo_version_ids" widget="many2many_tags" options="{'color_field': 'id'}"/>
                    <field name="limit_date"/>
                    <field name="state"/>
                    <!--                    <button string="Set to draft" type="object" name="action_draft" class="oe_highlight"/>
                                        <button string="Submit" type="object" name="action_submit" class="oe_highlight"/>-->
                    <button string="Set to progress" type="object" name="action_progress" icon="fa-check"
                            states="submitted,done"/>
                    <button string="Done" type="object" name="action_done" icon="fa-thumbs-up" states="in_progress"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="instance_request_kanban">
            <field name="name">Demande de creation d'instance</field>
            <field name="model">instance.request</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1" default_group_by="state">
                    <field name="name"/>
                    <field name="color"/>
                    <field name="state"/>
                    <field name="limit_date"/>
                    <field name="odoo_version_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="row mb4">
                                    <div class="col-12">
                                        <field name="name"/>
                                        <br/>
                                        <field name="color"/>
                                        <field name="odoo_version_ids" widget="many2many_tags"
                                               options="{'color_field': 'id'}"/>
                                        <field name="limit_date"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="instance_request_graph">
            <field name="name">Demande de creation d'instance</field>
            <field name="model">instance.request</field>
            <field name="arch" type="xml">
                <graph string="Instance graph">
                    <field name="state"/>
                    <field name="nb_lines" type="measure"/>
                </graph>
            </field>
        </record>

        <record model="ir.ui.view" id="instance_request_pivot">
            <field name="name">Demande de creation d'instance</field>
            <field name="model">instance.request</field>
            <field name="arch" type="xml">
                <pivot string="Instance pivot">
                    <field name="state" type="col"/>
                    <field name="odoo_version_id" type="row"/>
                    <field name="nb_lines" type="measure"/>
                </pivot>
            </field>
        </record>

