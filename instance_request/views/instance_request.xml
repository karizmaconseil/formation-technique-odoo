        <record model="ir.ui.view" id="odoo_version_list">
            <field name="name">Odoo Version</field>
            <field name="model">odoo.version</field>
            <field name="arch" type="xml">
                <tree editable="top" default_order="name asc" multi_edit="1">
                    <field name="name"/>
                    <field name="current_version"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="instance_request_form">
            <field name="name">Demande de creation d'instance</field>
            <field name="model">instance.request</field>
            <field name="arch" type="xml">
                <form string="Demande">
                    <!--                    create="false" duplicate="false"-->
                    <header>
                        <button string="Set to draft" type="object" name="action_draft" class="oe_highlight"

                                states="submitted,done"/>
                        <button string="Submit" type="object" name="action_submit" class="oe_highlight"
                                context="{'get_if_submit': '7'}"
                                states="draft,in_progress"/>
                        <button string="Set to progress" type="object" name="action_progress" class="oe_highlight"

                                states="submitted,done"/>
                        <button string="Done" type="object" groups="instance_request.group_instance_request_resp"
                                name="action_done" class="oe_highlight"
                                states="in_progress"/>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="cpu"/>
                                <field name="ram"/>
                                <field name="nb_lines"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="odoo_version_id"/>
                                <field name="odoo_version_ids" widget="many2many_tags" options="{'color_field': 'id'}"/>
                                <field name="color" groups="instance_request.group_instance_request" invisible="0"/>
                                <field name="limit_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Lines">
                                <field name="requests_line_ids">
                                    <tree editable="bottom">
                                        <field name="name" required="1"/>
                                        <field name="odoo_version_id" readonly="0" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="instance_request_action">
            <field name="name">Demande de creation</field>
            <field name="res_model">instance.request</field>
            <!--            <field name="domain">[('create_uid', '=', uid)]</field>-->
            <!--            <field name="context">{'group_by': ['limit_date']}</field>-->
            <field name="view_mode">tree,kanban,pivot,graph,form</field>
        </record>
        <record model="ir.actions.act_window" id="odoo_version_action">
            <field name="name">Odoo version</field>
            <field name="res_model">odoo.version</field>
            <!--            <field name="domain">[('create_uid', '=', uid)]</field>-->
            <!--            <field name="context">{'group_by': ['limit_date']}</field>-->
            <field name="view_mode">tree</field>
        </record>

