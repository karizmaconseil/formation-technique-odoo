<odoo>
    <data>
        <record id="instance_request_creation" model="mail.template">
            <field name="name">Instance request</field>
            <field name="model_id" ref="instance_request.model_instance_request"/>
            <field name="subject">{{ object.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <!--            <field name="email_to">{{ (object.partner_email if not object.sudo().partner_id.email or-->
            <!--                object.sudo().partner_id.email != object.partner_email else '') }}-->
            <!--            </field>-->
            <!--            <field name="partner_to">{{ object.partner_id.id if object.sudo().partner_id.email and-->
            <!--                object.sudo().partner_id.email == object.partner_email else '' }}-->
            <!--            </field>-->
            <field name="description">Inform the user about the creation of his instance</field>
            <field name="body_html" type="html">
                <div>
                    Dear,
                    <br/>
                    <br/>
                    Your request
                    <strong><t t-out="object.name"/></strong>
                    has been received on <span t-out="object.limit_date.strftime('%d/%m/%Y')"/>.
                    <br />
                    <br />


                    Thank you,
                    <br/>
                    <br/>
                </div>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>